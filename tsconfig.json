{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "commonjs",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
